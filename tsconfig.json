{
  "compilerOptions": {
    "outDir": "ts-build",
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
